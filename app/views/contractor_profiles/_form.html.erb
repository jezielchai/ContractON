<div class="hero-unit">
<%= form_for(@contractor_profile) do |f| %>

<%= f.label :avatar %>
<%= f.file_field :avatar %>

<h3>Address Information:</h3>
  <%= f.label :address %>
  <%= f.text_field :address %> 
  
  <%= f.label :city %>
  <%= f.text_field :city %>

    <%= f.label :state %>
    <%= f.text_field :state %> 

    <%= f.label :zipcode %>
    <%= f.text_field :zipcode, size: 6 %>
<h3>Educational Background:</h3>
<div class="field">
  <%= f.label:school %>
  <%= f.text_field :school %>
<div class="field">
  <%= f.label:major %>
  <%= f.text_field :major %>
<div class="field">
  <%= f.label:degree %>
  <%= f.text_field :degree %>
<div class="field">
  <%= f.label:license %>
  <%= f.text_field :license %>
<h3>Professional Information:</h3>
<div class="field">
<%= f.label :profession, "Profession" %>
    <%= f.select :profession, [['Engineer','engineer'], ['Architect','archi\
tect'], ['Scientist','scientist']] %>
<div class="field">
  <%= f.label:skills %>
  <%= f.text_area :skills, :rows =>"3", :cols=>"30" %>
<div class="field">
  <%= f.label:interests %>
  <%= f.text_area :interests, :rows =>"3", :cols=>"30" %>
<div class="field">
  <%= f.label:website %>
  <%= f.text_field :website %>
<div class="field">
  <%= f.label:work %>
  <%= f.text_field :work %>
<div class="field">
  <%= f.label:length %>
  <%= f.text_field :length %>
<div class="field">
  <%= f.label:salary %>
  <%= f.text_field :salary %>

  <div class="actions">
    <%= f.submit class: "btn btn-large btn-primary" %>
  </div>
  <% end %>
</div>
