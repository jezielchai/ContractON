<div class="hero-unit">
<%= form_for(@contractor_profile) do |f| %>

<h3>Address Information:</h3>
<div class="field">
  <%= f.label :address %>
   <%= f.text_field :address %>
  </div>
  <div class="field">
    <%= f.label :city %>
    <%= f.text_field :city %>
  </div>
  <div class="field">
    <%= f.label :state %>
    <%= f.text_field :state %> 
  </div>
  <div class="field">
    <%= f.label :zipcode %>
    <%= f.text_field :zipcode, size: 6 %>
  </div>

<h3>Educational Background:</h3>
<div class="field">
  <%= f.label:school %>
  <%= f.text_field :school %>
<div class="field">
  <%= f.label:major %>
  <%= f.text_field :major %>
<div class="field">
  <%= f.label:degree %>
  <%= f.text_field :degree %>
<div class="field">
  <%= f.label:license %>
  <%= f.text_field :license %>

<h3>Professional Information:</h3>
<div class="field">
  <%= f.label:skills %>
  <%= f.text_area :skills %>
<div class="field">
  <%= f.label:interests %>
  <%= f.text_area :interests %>
<div class="field">
  <%= f.label:website %>
  <%= f.text_field :website %>
<div class="field">
  <%= f.label:work %>
  <%= f.text_field :work %>
<div class="field">
  <%= f.label:length %>
  <%= f.text_field :length %>
<div class="field">
  <%= f.label:salary %>
  <%= f.text_field :salary %>

  <div class="actions">
    <%= f.submit %>
  </div>
  <% end %>
</div>
