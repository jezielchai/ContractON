<div class = "hero-unit" >
<div class="row">
	<div class="span6 offset3">

		<%=form_for(@company) do |c| %>
<h2>Company signup</h2>
			<%=c.label :name %>
			<%=c.text_field :name %>

			<%=c.label :industry %>
			<%=c.text_field :industry %>

			<%=c.label :password %>
			<%=c.password_field :password %>
                        <br />
			<%=c.submit "Create your account", class: "btn btn-large btn-primary" %>
		<% end %>
	</div>
</div>
</div>
<%=link_to "Company Profile", companies_show_path %>
