<div class="hero-unit" >
<br />
			<h2>Companies Search</h2>
			<h5>Search for contractors who need employment</h5>
<br />

<%= form_tag companies_path, :method => 'get' do %>
  <p>
   <%= label_tag(:keywords, "Keywords:") %>
  
    <%= text_field_tag("Search") %>
    
       <%= select_tag("keywards", options_for_select([['Name', '1'],['Geographic Location', '2'],['Profession','3'],['Contract Length','4'], ])) %>
    <%= submit_tag "Search", :class=>'btn btn-large btn-primary', :name => nil %>
   </p>
<% end %>
</div>

<%= provide(:title, 'All users') %>
<u><h2>All Contractors</h2></u>

<ul class="companies">
  <% @contractors.each do |c| %>
    <li>
  <%= link_to c.firstName + ' ' +  c.lastName, c %>
    </li>
  <% end %>
</ul>

<br />
<br />

</div>
