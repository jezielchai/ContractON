<div class="relative">

<% provide(:title, "Sign in" ) %>
<h1>Sign In</h1>

<div class="row">
	<div class="span6 offset3">
		<%= form_for(:session, url: contractor_sessions_path) do |f| %>

			<%= f.label :firstName %>
			<%= f.text_field :firstName %>

		        <%= f.label :password %>
			<%= f.password_field :password %>

			<%= f.submit "Sign in", class: "btn btn-large btn-primary" %>

		<% end %>
	</div>
</div>
</div>
