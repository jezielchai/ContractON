<div class = "hero-unit">
<div class="row">
<div class="span6 offset3">
<%= form_for @contractor, :html => {:class => "form-horizontal"} do |f| %>
    <h2>Sign Up</h2>

    <%= f.label :firstName, "First Name" %>
    <%= f.text_field :firstName %> 
    <%= f.label :lastName, "Last Name" %>
    <%= f.text_field :lastName %> 
    <%= f.label :email %>
    <%= f.text_field :email %>
    <%= f.label :profession, "Profession" %> 
    <%= f.select :profession, [['Engineer','engineer'], ['Architect','architect'], ['Scientist','scientist']] %>
    <%= f.label :password %>
    <%= f.password_field :password %> <br /> <br /> 
    <%= f.submit signup_message, class: "btn btn-large btn-primary" %>

<% end %>
</div>
</div>
</div>
